
extends ../layout.jade
block contenido
    form(action="/mostrar_aprendices_ficha" method="GET")
        center
            h1 BUSQUEDA DE APRENDICES
            select( name="numero_de_ficha" class="form-control col-sm-3 col-ls-3 col-lg-3 col-xl-3")
                option( value="seleccionar ficha" class="form-control col-sm-3 col-ls-3 col-lg-3 col-xl-3")
                    each fichas in buscar
                        option= fichas.Numero_de_ficha

            input(type="search" name="nombre_de_usuario" placeholder="Nombre Aprendiz..." value="")
            input( type="submit" value="BUSCAR")